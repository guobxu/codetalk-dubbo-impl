<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rect_default_radius_8dp"
    android:padding="@dimen/padding_8dp"
    android:layout_margin="@dimen/margin_6dp">

    <TextView
        android:id="@+id/tag_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tag_hits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tag_text"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_rect_gray_radius_8dp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="@dimen/margin_6dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

</RelativeLayout>